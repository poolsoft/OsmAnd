<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- WIDGET PANEL (UST Taraf, %25 yukseklik veya wrap_content) -->
    <FrameLayout
        android:id="@+id/widget_panel"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:background="#CC1A1A1A"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- MAP CONTAINER (Orta kisim, kalan alan) -->
    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/widget_panel"
        app:layout_constraintBottom_toTopOf="@+id/app_dock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- APP DOCK (En alt, 80dp yukseklik) -->
    <FrameLayout
        android:id="@+id/app_dock"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#DD000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- APP DRAWER OVERLAY -->
    <FrameLayout
        android:id="@+id/app_drawer_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#DD000000"
        android:visibility="gone"
        android:elevation="20dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
