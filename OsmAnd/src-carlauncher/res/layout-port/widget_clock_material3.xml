<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_widget_modern"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp">

    <!-- Saat Grubu (23) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/hour_digit_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="72sp"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/hour_digit_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="#A8C7FA"
            android:textSize="72sp"
            android:includeFontPadding="false"
            android:layout_marginStart="-5dp" />
    </LinearLayout>

    <!-- Ayırıcı Boşluk (Dikeyde daha az boşluk) -->
    <Space
        android:layout_width="wrap_content"
        android:layout_height="8dp" />

    <!-- Dakika Grubu (59) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/min_digit_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="#A8C7FA"
            android:textSize="72sp"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/min_digit_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textColor="#FFFFFF"
            android:textSize="72sp"
            android:includeFontPadding="false"
            android:layout_marginStart="-5dp" />
    </LinearLayout>

</LinearLayout>
