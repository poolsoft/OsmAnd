<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="8dp"
    android:background="@drawable/ripple_bg">

    <!-- Drag Handle -->
    <ImageView
        android:id="@+id/drag_handle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_sort_by_size" 
        android:scaleType="centerInside"
        android:tint="#888888"
        android:contentDescription="Tasi" />

    <!-- Widget Name -->
    <TextView
        android:id="@+id/widget_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Widget Name"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Modern Segmented Control for Size -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:background="#333333"
        android:padding="2dp"> 
        <!-- Rounded bg can be applied via shape if needed, using dark square for now to be safe -->

        <TextView
            android:id="@+id/btn_size_s"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="S"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#555555"
            android:layout_marginVertical="4dp"/>

        <TextView
            android:id="@+id/btn_size_m"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="M"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#555555"
            android:layout_marginVertical="4dp"/>

        <TextView
            android:id="@+id/btn_size_l"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="L"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"/>
    </LinearLayout>

    <!-- Delete Button -->
    <ImageView
        android:id="@+id/btn_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_delete"
        android:scaleType="centerInside"
        android:tint="#FF5252"
        android:contentDescription="Sil"
        android:layout_marginStart="12dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"/>

</LinearLayout>
