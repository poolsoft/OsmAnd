<?xml version="1.0" encoding="utf-8"?>
<!-- Modern Music Player - Split Layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#DD000000"
    android:clickable="true"
    android:focusable="true">

    <!-- Main Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <!-- LEFT PANEL: PLAYER CONTROLS (40%) -->
        <FrameLayout
            android:id="@+id/player_panel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="#111111">

            <!-- 1. Full Cover Background -->
            <ImageView
                android:id="@+id/now_playing_art"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_default_music_art"
                android:alpha="0.6"/>

            <!-- 2. Dark Overlay Gradient (Bottom to Top) -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_music_player_overlay_gradient"/>

            <!-- 3. Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- App Selector / Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:background="#40000000">

                    <ImageButton
                        android:id="@+id/btn_close"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:tint="#FFFFFF"
                        android:contentDescription="Kapat"
                        android:layout_marginEnd="12dp" />

                    <!-- Selector Area (Clickable) -->
                    <LinearLayout
                        android:id="@+id/app_selector"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:background="?android:attr/selectableItemBackground"
                        android:paddingHorizontal="8dp">

                        <ImageView
                            android:id="@+id/app_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_media_play"/>

                        <TextView
                             android:id="@+id/app_name"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Muzik Kaynagi"
                             android:textColor="#FFFFFF"
                             android:textSize="16sp"
                             android:textStyle="bold"
                             android:shadowColor="#000000"
                             android:shadowDx="1"
                             android:shadowDy="1"
                             android:shadowRadius="2"
                             android:layout_marginStart="12dp"/>

                         <ImageView
                             android:layout_width="24dp"
                             android:layout_height="24dp"
                             android:src="@android:drawable/arrow_down_float"
                             android:tint="#FFFFFF"
                             android:layout_marginStart="8dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Spacer -->
                <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
                
                <!-- Info (Now in middle/bottom) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/now_playing_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Parca Adi"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:shadowColor="#000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="4"/>

                    <TextView
                        android:id="@+id/now_playing_artist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Sanatci"
                        android:textColor="#DDDDDD"
                        android:textSize="14sp"
                        android:shadowColor="#000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"/>
                </LinearLayout>

                <!-- Metadata & Seekbar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="24dp"
                    android:paddingBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:id="@+id/time_current"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0:00"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:shadowColor="#000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2"/>
                        <Space android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/time_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0:00"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:shadowColor="#000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2"/>
                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="#00FFFF"
                        android:thumbTint="#00FFFF" />
                </LinearLayout>

                <!-- Controls -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="32dp">

                    <ImageButton
                        android:id="@+id/btn_shuffle"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_music_shuffle"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:tint="#FFFFFF"
                        android:contentDescription="Karistir" />

                    <!-- Previous -->
                    <ImageButton
                        android:id="@+id/btn_prev"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_music_prev"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:tint="#FFFFFF"
                        android:contentDescription="Onceki" />

                    <!-- Play/Pause (Large) -->
                    <ImageButton
                        android:id="@+id/btn_play"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginHorizontal="24dp"
                        android:src="@drawable/ic_music_play"
                        android:background="@drawable/bg_circle_cyan"
                        android:tint="#000000"
                        android:padding="16dp"
                        android:contentDescription="Oynat" />

                    <!-- Next -->
                    <ImageButton
                        android:id="@+id/btn_next"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_music_next"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:tint="#FFFFFF"
                        android:contentDescription="Sonraki" />

                    <!-- Repeat -->
                    <ImageButton
                        android:id="@+id/btn_repeat"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_music_repeat"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:tint="#FFFFFF"
                        android:contentDescription="Tekrar" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <!-- RIGHT PANEL: TRACK LIST (60%) -->
        <LinearLayout
            android:id="@+id/track_list_panel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical"
            android:background="#DD000000"
            android:padding="8dp">

            <!-- Hybrid Tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_card_rounded_black"
                android:gravity="center_vertical"
                android:paddingHorizontal="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tab_all_tracks"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Tum Sarkilar"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="?android:attr/selectableItemBackground"/>
                
                <View android:layout_width="1dp" android:layout_height="24dp" android:background="#444444"/>

                <TextView
                    android:id="@+id/tab_recent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Son Calinan"
                    android:textColor="#888888"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="?android:attr/selectableItemBackground"/>

                <View android:layout_width="1dp" android:layout_height="24dp" android:background="#444444"/>

                <!-- Playlist Tab with Spinner -->
                <LinearLayout
                    android:id="@+id/tab_playlists_container"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingStart="8dp">
                    
                    <TextView
                        android:id="@+id/tab_playlist_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Listeler: "
                        android:textColor="#888888"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <Spinner
                        android:id="@+id/playlist_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:spinnerMode="dropdown"/>
                </LinearLayout>
            </LinearLayout>
            
            <!-- Search Bar -->
            <EditText
                android:id="@+id/search_input"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_widget_card"
                android:hint="Ara..."
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:textSize="14sp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:drawableTint="#888888"
                android:drawablePadding="8dp"
                android:layout_marginBottom="8dp"/>

            <!-- List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/music_recycler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scrollbars="vertical"
                android:clipToPadding="false"
                android:paddingBottom="16dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Close Button Removed (Moved to Header) -->

</LinearLayout>
