<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dock_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:paddingStart="4dp"
    android:paddingEnd="4dp">

    <!-- 1. App Drawer Button (Left) -->
    <ImageButton
        android:id="@+id/btn_app_list"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="?attr/selectableItemBackgroundBorderless" 
        android:contentDescription="Apps"
        android:padding="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/dashboard_grid"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF" />

    <!-- SEPARATOR -->
    <View
        android:id="@+id/sep_1"
        android:layout_width="1dp"
        android:layout_height="32dp"
        android:background="#33FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_app_list"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="4dp"/>

    <!-- 3. Shortcuts RecyclerView (Variable Width) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dock_recycler"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/sep_1"
        app:layout_constraintEnd_toStartOf="@id/mini_music_container"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 4. Mini Music Player (Right Side) - Improved Style -->
    <LinearLayout
        android:id="@+id/mini_music_container"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_card_rounded_black" 
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginEnd="8dp"
        android:minWidth="140dp"
        android:visibility="visible"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/clock_settings_container"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/mini_music_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_media_play"
            android:background="@drawable/bg_circle_translucent_white"
            android:padding="6dp"
            app:tint="#FFFFFF"/>

        <TextView
            android:id="@+id/mini_music_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muzik Secin"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:maxWidth="110dp"/>

        <ImageButton
            android:id="@+id/mini_btn_play"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_media_play"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:scaleType="fitCenter"
            app:tint="#00FFFF"/>

        <ImageButton
            android:id="@+id/mini_btn_next"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_media_next"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:layout_marginStart="2dp"
            app:tint="#FFFFFF"/>

    </LinearLayout>

    <!-- 5. Clock + Layout Toggle Container (Far Right) -->
    <LinearLayout
        android:id="@+id/clock_settings_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:paddingStart="12dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/dock_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:includeFontPadding="false" />

        <ImageButton
            android:id="@+id/btn_layout_toggle"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_action_view_as_list"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:scaleType="fitCenter"
            app:tint="#AAAAAA"
            android:contentDescription="Layout Toggle" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
