<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fitsSystemWindows="true">

    <!-- MAP CONTAINER (Dynamic Constraints) -->
    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_card_rounded_black" 
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/app_dock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/widget_panel"
        android:elevation="4dp"/>

    <!-- WIDGET PANEL CONTAINER (Drawer) -->
    <FrameLayout
        android:id="@+id/widget_panel"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:background="#111111"
        android:layout_marginTop="0dp"
        android:paddingTop="32dp"
        android:paddingBottom="60dp"
        android:elevation="20dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- WIDGET HANDLE (External Floater) -->
    <ImageButton
        android:id="@+id/widget_handle"
        android:layout_width="48dp"
        android:layout_height="96dp"
        android:src="@drawable/ic_chevron_left"
        android:background="@drawable/bg_drawer_handle"
        android:scaleType="fitCenter"
        android:padding="12dp"
        android:elevation="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" 
        app:layout_constraintVertical_bias="0.5" />

    <!-- APP DOCK (Bottom Nav Bar Style) -->
    <FrameLayout
        android:id="@+id/app_dock"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="#111111"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </FrameLayout>

    <!-- APP DRAWER OVERLAY -->
    <FrameLayout
        android:id="@+id/app_drawer_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:visibility="gone"
        android:paddingTop="32dp"
        android:elevation="20dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FULL SCREEN EXIT BUTTON -->
    <ImageButton
        android:id="@+id/btn_fullscreen_exit"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_action_view_as_list"
        android:background="@drawable/bg_circle_translucent_black"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:elevation="25dp"
        android:contentDescription="Exit Full Screen"
        app:tint="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
