<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- MAP CONTAINER (%70 width) -->
    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/app_dock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/widget_panel"
        app:layout_constraintHorizontal_weight="7" />

    <!-- WIDGET PANEL (%30 width, sag taraf, her zaman dikey) -->
    <FrameLayout
        android:id="@+id/widget_panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#CC1A1A1A"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/app_dock"
        app:layout_constraintStart_toEndOf="@+id/map_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="3" />

    <!-- APP DOCK (varsayilan: altta, yatay) -->
    <FrameLayout
        android:id="@+id/app_dock"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#DD000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Fragment buraya eklenecek -->

    </FrameLayout>

    <!-- TOGGLE UI BUTTON (sag ust kose) -->
    <ImageButton
        android:id="@+id/btn_toggle_ui"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_view"
        android:tint="#FFFFFF"
        android:contentDescription="Toggle UI"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TOGGLE DOCK BUTTON (alt orta) -->
    <ImageButton
        android:id="@+id/btn_toggle_dock"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:layout_marginBottom="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/arrow_down_float"
        android:tint="#FFFFFF"
        android:contentDescription="Toggle Dock"
        app:layout_constraintBottom_toTopOf="@+id/app_dock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- APP DRAWER OVERLAY (En ust katman, varsayilan GONE) -->
    <FrameLayout
        android:id="@+id/app_drawer_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DD000000"
        android:visibility="gone"
        android:elevation="20dp"
        android:clickable="true"
        android:focusable="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>
