<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- MAP CONTAINER (%70 width) -->
    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/app_dock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/widget_panel"
        app:layout_constraintHorizontal_weight="7" />

    <!-- WIDGET PANEL (%30 width, sag taraf) -->
    <FrameLayout
        android:id="@+id/widget_panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#CC1A1A1A"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/app_dock"
        app:layout_constraintStart_toEndOf="@+id/map_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="3" />

    <!-- APP DOCK (altta, tum genislik) -->
    <LinearLayout
        android:id="@+id/app_dock"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#DD000000"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- App shortcuts buraya eklenecek -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Shortcuts"
            android:textColor="#88FFFFFF"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- TOGGLE UI BUTTON (sag ust kose) -->
    <ImageButton
        android:id="@+id/btn_toggle_ui"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_view"
        android:tint="#FFFFFF"
        android:contentDescription="Toggle UI"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TOGGLE DOCK BUTTON (alt orta) -->
    <ImageButton
        android:id="@+id/btn_toggle_dock"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:layout_marginBottom="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/arrow_down_float"
        android:tint="#FFFFFF"
        android:contentDescription="Toggle Dock"
        app:layout_constraintBottom_toTopOf="@+id/app_dock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
