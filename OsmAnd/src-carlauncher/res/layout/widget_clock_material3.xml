<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/bg_widget_modern">

    <!-- Üst Sol Rakam (0) -->
    <TextView
        android:id="@+id/hour_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#F0F5FF"
        android:textSize="120sp"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Üst Sağ Rakam (7) -->
    <TextView
        android:id="@+id/hour_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textColor="#B3D7FF"
        android:textSize="120sp"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:layout_marginStart="-20dp"
        app:layout_constraintTop_toTopOf="@+id/hour_first"
        app:layout_constraintStart_toEndOf="@+id/hour_first" />

    <!-- Alt Sol Rakam (4) -->
    <TextView
        android:id="@+id/min_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textColor="#B3D7FF"
        android:textSize="120sp"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:layout_marginTop="-40dp"
        app:layout_constraintTop_toBottomOf="@+id/hour_first"
        app:layout_constraintStart_toStartOf="@+id/hour_first"
        app:layout_constraintEnd_toEndOf="@+id/hour_first" />

    <!-- Alt Sağ Rakam (9) -->
    <TextView
        android:id="@+id/min_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textColor="#F0F5FF"
        android:textSize="120sp"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:layout_marginStart="-20dp"
        app:layout_constraintTop_toTopOf="@+id/min_first"
        app:layout_constraintStart_toEndOf="@+id/min_first" />

</androidx.constraintlayout.widget.ConstraintLayout>
